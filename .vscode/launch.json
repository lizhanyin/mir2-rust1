{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'library_editor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=library_editor",
                    "--package=library_editor"
                ],
                "filter": {
                    "name": "library_editor",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "preLaunchTask": "cargo build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=library_editor",
                    "--package=library_editor"
                ],
                "filter": {
                    "name": "library_editor",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "preLaunchTask": "cargo test --no-run"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug specific test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=library_editor",
                    "--package=library_editor",
                    "--",
                    "${selectedTest}"
                ],
                "filter": {
                    "name": "library_editor",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "args": ["--", "${selectedTest}"],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ]
}
