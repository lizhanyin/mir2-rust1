{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI (--no-gui)",
            "cargo": {
                "args": ["build", "--bin=library_editor"],
                "filter": { "name": "library_editor", "kind": "bin" }
            },
            "cwd": "${workspaceFolder}",
            "args": ["--no-gui"],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GUI (默认)",
            "cargo": {
                "args": ["build", "--bin=library_editor"],
                "filter": { "name": "library_editor", "kind": "bin" }
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GUI (library_editor_gui)",
            "cargo": {
                "args": ["build", "--bin=library_editor_gui", "--features=gui"],
                "filter": { "name": "library_editor_gui", "kind": "bin" }
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=library_editor",
                    "--package=library_editor"
                ],
                "filter": {
                    "name": "library_editor",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ]
}
